{
  "manifest_version": 2,
  "name": "Tab - Close All",
  "description": "Add a tab context menu to close all tabs",
  "version": "1.0",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "strict_min_version": "61.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
    "menus",
    "activeTab",
    "tabs"
  ]

}
